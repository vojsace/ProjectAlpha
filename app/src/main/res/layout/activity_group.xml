<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".GroupActivity">

    <EditText
        android:id="@+id/room_name_edittext"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="3dp"
        android:ems="10"
        android:hint="Enter your question"
        android:inputType="textShortMessage|textLongMessage" />

    <Button
        android:id="@+id/btn_add_room"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/listView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@+id/room_name_edittext"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/add"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_above="@+id/room_name_edittext"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Questions Lobby"
        android:textColor="@color/blueColor"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>