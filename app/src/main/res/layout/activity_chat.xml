<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".ChatActivity">

    <EditText
        android:id="@+id/chat_editText"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/user_msg_rounded"
        android:backgroundTint="#686666"
        android:ems="10"
        android:hint="@string/aa"
        android:imeOptions="actionSend"
        android:inputType="textLongMessage"
        android:padding="8dp"
        android:singleLine="false"
        android:textColor="#FFFFFF" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewID"
        android:layout_width="match_parent"
        android:layout_height="562dp"
        android:layout_above="@+id/chat_editText"
        android:layout_below="@+id/scrollView"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="25dp"
        android:clickable="false"
        android:isScrollContainer="false"
        android:orientation="vertical"
        android:persistentDrawingCache="scrolling"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="vertical"
        app:reverseLayout="false"
        app:stackFromEnd="false" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chat_editText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@+id/chat_editText"
        android:background="@drawable/rounded_btn"
        app:srcCompat="@drawable/arrow" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/scrollText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>